<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_frapper"
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/icon_container"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="@+id/item_frapper"
        app:layout_constraintTop_toTopOf="@+id/item_frapper"/>

    <RelativeLayout
        android:id="@+id/ionicons_sv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/month"
        app:layout_constraintBottom_toBottomOf="@+id/icon_container"
        app:layout_constraintEnd_toEndOf="@+id/icon_container"
        app:layout_constraintStart_toStartOf="@+id/icon_container"
        app:layout_constraintTop_toTopOf="@+id/icon_container"/>

    <View
        android:id="@+id/group_2"
        android:layout_width="92dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:background="#00000000"
        app:layout_constraintStart_toEndOf="@+id/icon_container"
        app:layout_constraintTop_toTopOf="@+id/item_frapper" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:gravity="top"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="@+id/group_2"
        app:layout_constraintTop_toTopOf="@+id/group_2" />

    <TextView
        android:id="@+id/item_category"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.4"
        android:gravity="top"
        android:text="Kategorie"
        android:textSize="12sp"
        android:textColor="#222222"
        app:layout_constraintBottom_toBottomOf="@+id/group_2"
        app:layout_constraintStart_toStartOf="@+id/group_2"
        app:layout_constraintTop_toBottomOf="@+id/item_name"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/group_6"
        android:layout_width="74dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="@+id/item_frapper"
        app:layout_constraintTop_toTopOf="@+id/item_frapper" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:text="-300â‚¬.00"
        android:textSize="14sp"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="@+id/group_6"
        app:layout_constraintTop_toTopOf="@+id/group_6" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:alpha="0.4"
        android:gravity="top"
        android:text="30.03.2022"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/group_6"
        app:layout_constraintEnd_toEndOf="@+id/group_6" />

</androidx.constraintlayout.widget.ConstraintLayout>